# ===== LLM Configuration =====
# Provider: openai | azure | bedrock | local
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Azure OpenAI (if using Azure)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Ollama local model (if using local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# ===== Database =====
DATABASE_URL=sqlite:///./sar_system.db
# For PostgreSQL: postgresql://user:password@localhost:5432/sar_db

# ===== ChromaDB =====
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_SAR_TEMPLATES=sar_templates
CHROMA_COLLECTION_REGULATIONS=regulatory_guidelines

# ===== Security =====
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=480

# ===== Alerts =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_FROM_EMAIL=sar-system@bank.com
ALERT_TO_EMAIL=compliance@bank.com

# ===== Application =====
APP_NAME=SAR Narrative Generator
APP_ENV=development
LOG_LEVEL=INFO
MAX_TOKENS_PER_NARRATIVE=4096
AUDIT_LOG_RETENTION_DAYS=2555

# ===== Embedding Model =====
EMBEDDING_MODEL=all-MiniLM-L6-v2
